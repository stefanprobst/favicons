{
  "name": "@stefanprobst/favicons",
  "version": "1.0.2",
  "main": "src/index.js",
  "repository": "git@github.com:stefanprobst/favicons.git",
  "author": "Stefan Probst <stefanprobst@kolabnow.com>",
  "license": "MIT",
  "bin": {
